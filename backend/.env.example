# Database Configuration
DATABASE_URL=postgresql://flightuser:flightpass123@localhost:5432/flight_pricing
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=300

# Security
SECRET_KEY=your-super-secret-key-change-in-production-use-strong-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_NAME=Flight Price Recommendation Engine
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8000"]

# ML Models
ML_MODEL_PATH=./models
MODEL_RETRAIN_INTERVAL_HOURS=24
FORECASTING_HORIZON_DAYS=90

# Forecasting Parameters
MIN_HISTORICAL_DATA_POINTS=30
SEGMENT_MIN_SIZE=10
CONFIDENCE_THRESHOLD=0.75

# Price Optimization
MIN_PRICE_MARGIN=0.05
MAX_PRICE_INCREASE=0.30
DEMAND_ELASTICITY_FACTOR=1.2

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Amadeus API Configuration
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
AMADEUS_ENVIRONMENT=test  # Use 'production' for live data

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO
